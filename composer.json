{
    "name": "fulldecent/google-sheets-etl",
    "type": "library",
    "description": "Synchronize all your Google Sheets to your SQL database",
    "license": "MIT",
    "authors": [
        {
            "name": "William Entriken",
            "email": "github.com@phor.net"
        }
    ],
    "require": {
        "php": ">=8.2.0",
        "google/apiclient": "^2.17"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=11",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {"fulldecent\\GoogleSheetsEtl\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"fulldecent\\GoogleSheetsEtl\\": "tests/"}
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "./vendor/bin/phpcs src tests",
        "fix-style": "./vendor/bin/phpcbf src tests"
    }
}
